#!/bin/bash

start() {
    echo -n "Setting hostname: "

    sn=$(/opt/vc/bin/vcgencmd otp_dump | grep 28: | tail -c +4)
    hostname="motionpie-$sn"
    /bin/hostname $hostname
    echo "Welcome to $hostname!" > /var/cache/sshd_banner
    sed -i "s/\"motionpie\"/\"$hostname\"/g" /etc/dhcp/dhclient.conf

    echo "done"
}

stop() {
    echo -n
}

restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;

    stop)
        stop
        ;;

    restart|reload)
        restart
        ;;

    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
